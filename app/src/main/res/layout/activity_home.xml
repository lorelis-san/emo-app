<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_left"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMOKIT"
        android:textSize="38sp"
        android:textStyle="bold"
        android:textColor="#4B0082"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginStart="24dp"/>

    <LinearLayout
        android:id="@+id/linearLayoutCards"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDiario"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#F3E5F5"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/circle_background_primary" />

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="-48dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/ic_diario_emocional"
                    app:tint="#4B0082" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diario\nemocional"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="#4B0082"
                    android:textAlignment="center"
                    android:lineSpacingMultiplier="0.9" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRetos"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#E8F5E8"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/circle_background_green" />

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="-48dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/ic_retos_diarios"
                    app:tint="#2E7D32" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retos\ndiarios"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:textAlignment="center"
                    android:lineSpacingMultiplier="0.9" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMeditaciones"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#E3F2FD"
            app:cardElevation="6dp"
            app:strokeWidth="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <View
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/circle_background_blue" />

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="-48dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/ic_meditaciones"
                    app:tint="#1976D2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meditación"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:textAlignment="center"
                    android:lineSpacingMultiplier="0.9" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardProgreso"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#FFF3E0"
            app:cardElevation="6dp"
            app:strokeWidth="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <View
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/circle_background_orange" />

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="-48dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/ic_progreso"
                    app:tint="#F57C00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progreso"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#F57C00"
                    android:textAlignment="center"
                    android:lineSpacingMultiplier="0.9" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <TextView
        android:id="@+id/tvMotivacional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Haz de hoy tu día."
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#4B0082"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutCards"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp" />

    <LinearLayout
        android:id="@+id/layoutEstadoEmocional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvMotivacional"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <!-- Contenedor del gráfico circular -->
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <com.psico.emokitapp.views.EmotionalStateChart
                android:id="@+id/chartEstadoEmocional"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imgEmocionPrincipal"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_emotion_happy" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvDescripcionEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado emocional de hoy"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#3D305C" />

        <TextView
            android:id="@+id/tvPorcentajeEmocional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="18sp"
            android:textColor="#FFC107"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="unlabeled"
        style="@style/BottomNavigationViewStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>