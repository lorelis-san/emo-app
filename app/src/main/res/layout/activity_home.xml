<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_emokit"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMOKIT"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#4B0082"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginStart="24dp"/>

    <!-- Botón de configuración -->
<!--    <TextView-->
<!--        android:id="@+id/btnSettings"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="⚙️"-->
<!--        android:textSize="24sp"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        android:layout_margin="16dp" />-->

    <!-- Cuatro tarjetas horizontales con más margen lateral y menos altura -->
    <LinearLayout
        android:id="@+id/linearLayoutCards"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDiario"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#e7dced"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_diario_emocional" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diario emocional"
                    android:textSize="9sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CARD 2: Retos -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRetos"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#e7dced"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_retos_diarios" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retos diarios"
                    android:textSize="9sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CARD 3: Meditaciones -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMeditaciones"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#e7dced"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_meditaciones" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meditaciones"
                    android:textSize="9sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CARD 4: Progreso -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardProgreso"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="85dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#e7dced"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_progreso" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progreso"
                    android:textSize="9sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Frase motivacional -->
    <TextView
        android:id="@+id/tvMotivacional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="“Haz de hoy tu día.”"
        android:textSize="20sp"
        android:textColor="#4B0082"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutCards"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Indicador de estado emocional actual -->
    <ImageView
        android:id="@+id/imgEstadoEmocional"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_emotion_happy"
        app:layout_constraintTop_toBottomOf="@id/tvMotivacional"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvEstadoEmocional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado emocional actual"
        android:textSize="18sp"
        android:textColor="#4B0082"
        app:layout_constraintTop_toBottomOf="@id/imgEstadoEmocional"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Bottom Navigation (Home, +, Perfil) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="unlabeled"
        style="@style/BottomNavigationViewStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>
