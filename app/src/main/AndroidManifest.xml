<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".EmokitApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EmokitApp"
        tools:targetApi="31">
        <activity
            android:name=".activities.MenuActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ProgresoActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MeditacionesActivity"
            android:exported="false" />
        <activity
            android:name=".activities.RetosDiariosActivity"
            android:exported="false" />
        <activity
            android:name=".activities.DiarioEmocionalActivity"
            android:exported="false" />
        <activity
            android:name=".activities.HomeActivity"
            android:exported="false" /> <!-- SplashActivity como LAUNCHER (actividad principal) -->
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.EmokitApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- WelcomeActivity - Segunda en el flujo -->
        <!-- <activity -->
        <!-- android:name=".activities.WelcomeActivity" -->
        <!-- android:exported="false" /> -->
        <!-- LoginActivity - Ya no es LAUNCHER -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.EmokitApp" />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>